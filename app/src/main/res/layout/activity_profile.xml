<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ProfileActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBar"
            android:background="#F0F0F0"
            android:layout_above="@+id/logout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginEnd="@dimen/fab_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="20dp"
                    android:text="Shop ID"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/uniqueId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins"
                    android:text="Full Name   (Click below to edit)" />

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="13sp"
                    android:text="Phone   (Click below to edit)"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:textColorHint="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="13sp"
                    android:text="Username   (Click below to edit)"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="13sp"
                    android:text="Category   (Click below to edit)"/>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:textColorHint="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins"
                    android:text="Address   (Click below to edit)"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textColorHint="@color/black" />

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Logout"
            android:layout_alignParentBottom="true"
            android:background="#FF0000"
            android:textColor="@color/white"/>

    </RelativeLayout>
</layout>